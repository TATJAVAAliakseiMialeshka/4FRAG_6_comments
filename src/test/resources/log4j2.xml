<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout>
                <Pattern>%d %c{2} [%t] %1 %m%n</Pattern>
            </PatternLayout>
        </Console>
        <File name="File" filename="target/logs/github-automation.log">
            <PatternLayout>
                <Pattern>%d %c{2} [%t] %1 %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
